	"lint-staged": {
		"*.{yml,yaml,json,js,ts,css,html,svelte}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"packageManager": "pnpm@9.12.3",
	"dependencies": {
		"openai": "^4.71.1"
