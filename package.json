		"@types/eslint": "^9.6.1",
		"@types/qrcode": "^1.5.5",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"firebase": "^11.0.1",
		"firebase-admin": "^12.7.0",
		"globals": "^15.12.0",
		"html5-qrcode": "^2.3.8",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"lucide-svelte": "^0.454.0",
		"mdsvex": "^0.11.2",
